<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardBackgroundColor="@color/foreground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/playfair_semibold"
            android:text="Enter Source Information"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/playfair_semibold"
            android:text="@string/fuel_stick_reading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/textView5"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pre-Delivery"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Product Dropped"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText" />

        <TextView
            android:id="@+id/textView7"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Drop Start Date"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText2"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText2" />

        <TextView
            android:id="@+id/textView18"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Time
"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText10" />

        <TextView
            android:id="@+id/textView14"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText8" />

        <TextView
            android:id="@+id/textView8"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Drop End Date"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText3"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText3" />

        <TextView
            android:id="@+id/textView13"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gross Gallons"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText4"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText4" />

        <TextView
            android:id="@+id/textView12"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Gallons"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/editText" />

        <TextView
            android:id="@+id/textView9"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Remaining Fuel"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText6"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText6" />

        <TextView
            android:id="@+id/textView11"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Signature"
            app:layout_constraintStart_toStartOf="@+id/scanBillButton"
            app:layout_constraintTop_toBottomOf="@+id/scanBillButton" />

        <TextView
            android:id="@+id/textView3"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post-Delivery"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/editText2" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText6"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            app:layout_constraintEnd_toEndOf="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            app:layout_constraintEnd_toEndOf="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText3"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText8"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText10"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText4"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText2"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/scanBillButton"
            style="@style/playfair_normal_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/background_orange"
            android:fontFamily="@font/playfair_bold"
            android:padding="4dp"
            android:text="Scan Bill"
            app:layout_constraintEnd_toEndOf="@+id/textInputEditText6"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText5"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText5" />

        <com.github.gcacace.signaturepad.views.SignaturePad
            android:id="@+id/signaturePad1"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/save_cont"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@color/dark_orange"
            android:fontFamily="@font/playfair_bold"
            android:padding="8dp"
            android:text="Save and Continue"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/signaturePad1"
            app:layout_constraintStart_toEndOf="@+id/signaturePad1"
            app:layout_constraintStart_toStartOf="@+id/signaturePad1"
            app:layout_constraintTop_toBottomOf="@+id/signaturePad1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>