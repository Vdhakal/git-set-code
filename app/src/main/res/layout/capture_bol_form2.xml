<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardBackgroundColor="@color/foreground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enter Site Information"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Remaining Fuel (Pre delivery)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/textView6"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Product Type"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/pre_delivery_rem_site" />

        <TextView
            android:id="@+id/textView7"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Load Start Date"
            app:layout_constraintStart_toStartOf="@+id/product_type_site"
            app:layout_constraintTop_toBottomOf="@+id/product_type_site" />

        <TextView
            android:id="@+id/textView18"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Time
"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/drop_end_time_site" />

        <TextView
            android:id="@+id/textView14"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/start_time_site" />

        <TextView
            android:id="@+id/textView8"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Load End Date"
            app:layout_constraintStart_toStartOf="@+id/start_date_site"
            app:layout_constraintTop_toBottomOf="@+id/start_date_site" />

        <TextView
            android:id="@+id/textView13"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gross Gallons"
            app:layout_constraintStart_toStartOf="@+id/drop_end_date_site"
            app:layout_constraintTop_toBottomOf="@+id/drop_end_date_site" />

        <TextView
            android:id="@+id/textView12"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Gallons"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/net_gallons_site" />

        <TextView
            android:id="@+id/textView9"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Remaining Fuel (Post delivery)"
            app:layout_constraintStart_toStartOf="@+id/gross_gallons_site"
            app:layout_constraintTop_toBottomOf="@+id/gross_gallons_site" />

        <TextView
            android:id="@+id/textView11"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Signature"
            app:layout_constraintStart_toStartOf="@+id/materialButton"
            app:layout_constraintTop_toBottomOf="@+id/materialButton" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pre_delivery_rem_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gross_gallons_site"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/product_type_site"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            app:layout_constraintEnd_toEndOf="@+id/net_gallons_site"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/remaining_fuel_site"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/net_gallons_site"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/start_date_site"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/start_time_site"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/drop_end_time_site"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/drop_end_date_site"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_orange"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/net_gallons_site"
            android:layout_width="128sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Button
            android:id="@+id/materialButton"
            style="@style/playfair_normal_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/background_orange"
            android:padding="4dp"
            android:text="Scan Bill of Lading"
            app:layout_constraintEnd_toEndOf="@+id/gross_gallons_site"
            app:layout_constraintStart_toStartOf="@+id/remaining_fuel_site"
            app:layout_constraintTop_toBottomOf="@+id/remaining_fuel_site" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/notes_edit"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:background="@color/background_orange"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView10"
            style="@style/playfair_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/materialButton" />

        <Button
            android:id="@+id/save_cont_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/playfair_normal_black"
            android:layout_gravity="center"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="82dp"
            android:background="@drawable/orange_fill__rounded_color"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="Save And Continue"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/notes_edit"
            app:layout_constraintStart_toEndOf="@+id/notes_edit"
            app:layout_constraintStart_toStartOf="@+id/notes_edit"
            app:layout_constraintTop_toBottomOf="@+id/notes_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>