<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gitsetcode" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_orange</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <item name="colorOnPrimary">@color/tool_bar</item>
        <item name="colorAccent">#951565C0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_orange</item>
        <item name="colorSecondaryVariant">@color/tool_bar</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/bottom_navigation_text_color</item>
        <item name="android:windowContentOverlay">@drawable/drop_shadow</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>
    <style name = "NeumorphismCard">
        <item name = "neumorph_cornerFamily">rounded</item>
    </style>

</resources>